@using Connect4.Web.Models
@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container">
    <div class="game-title">
        <a asp-controller="Home" asp-action="Index" class="title-link">
            <img src="~/images/gamepad.png" alt="Game Console" class="console-icon">
            <span>CONNECT 4</span>
        </a>
    </div>

    <div class="menu-buttons">
        <a asp-controller="Partida" asp-action="Create" class="pixel-btn">JUGAR</a>
        <a asp-controller="Jugador" asp-action="Index" class="pixel-btn">JUGADORES</a>
        <a asp-controller="Partida" asp-action="Index" class="pixel-btn">PARTIDAS</a>
        <a asp-controller="Jugador" asp-action="Ranking" class="pixel-btn">RANKING</a>
    </div>

    <footer class="footer-text">
        Desarrollado por el grupo 1
    </footer>
</div>