@using Connect4.Web.Models
@{
    ViewData["Title"] = "Tablero";
    var tablero = (char[,])ViewBag.Tablero;
    var partida = (Partida)ViewBag.Partida;
    var turnoJugador = partida.TurnoJugador;
    var coordsGanadoras = ViewBag.CoordenadasGanadoras as HashSet<string> ?? new HashSet<string>();
    bool esTurnoJ1 = partida.TurnoJugadorId == partida.Jugador1Id;
}

<div class="game-container">
    <h1 class="game-title">
        <img src="~/images/gamepad.png" alt="Game Console" class="console-icon">
            <span>CONNECT 4</span>
    </h1>

    <div class="players-info">
        <div class="player-box player1">
            <span class="player-label">JUGADOR 1:</span>
            <span class="player-name">@partida.Jugador1?.Nombre</span>
        </div>

        <div class="turn-box">
            <span class="turn-label">TURNO DE:</span>
            <span class="turn-name">@(esTurnoJ1 ? partida.Jugador1?.Nombre : partida.Jugador2?.Nombre)</span>
        </div>

        <div class="player-box player2">
            <span class="player-label">JUGADOR 2:</span>
            <span class="player-name">@partida.Jugador2?.Nombre</span>
        </div>
    </div>

    <div class="board" id="board">
        @for (int fila = 5; fila >= 0; fila--)
        {
            for (int col = 0; col < 7; col++)
            {
                char ficha = tablero[fila, col];
                string clave = $"{fila},{col}";

                string fichaClass = ficha == 'X' ? "cell player1"
                                  : ficha == 'O' ? "cell player2"
                                  : "cell";

                if (coordsGanadoras.Contains(clave))
                {
                    fichaClass += " winner";
                }

                <div class="@fichaClass" data-col="@col"></div>
            }
        }
    </div>

    @if (partida.Estado == "Finalizada")
    {
        <div class="winner-message">
            @if (partida.Resultado.StartsWith("Victoria"))
            {
                <p>El jugador <strong>@partida.Resultado.Replace("Victoria - ", "")</strong> ha ganado la partida.</p>
            }
            else if (partida.Resultado == "Empate")
            {
                <p>¡Empate! El tablero está lleno.</p>
            }
        </div>
        <a asp-controller="Partida" asp-action="Index" class="btn-back">
            <img src="~/images/back.png" alt="Back" class="console-icon">
            <span>Volver a partidas</span>
        </a>
    }

    <form id="jugarForm" asp-action="Jugar" method="post">
        <input type="hidden" name="id" value="@partida.PartidaId" />
        <input type="hidden" id="columnaInput" name="columna" />
    </form>

    <form asp-action="Reiniciar" method="post" class="restart-form">
        <input type="hidden" name="id" value="@partida.PartidaId" />
        <button type="submit" class="btn-restart">
            <img src="~/images/restart.png" alt="Restart" class="console-icon">
            <span>Reiniciar</span>
        </button>
    </form>

    @if (TempData["Error"] != null)
    {
        <p class="error-message">@TempData["Error"]</p>
    }
</div>

@section Scripts {
<script>
    document.querySelectorAll('.cell').forEach(cell => {
        cell.addEventListener('click', function () {
            const col = this.getAttribute('data-col');
            document.getElementById('columnaInput').value =
                String.fromCharCode(65 + parseInt(col)); // 0 -> A, 1 -> B...
            document.getElementById('jugarForm').submit();
        });
    });
</script>
}